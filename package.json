{
  "name": "pr-checklist-to-sheets",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Action to sync PR body checklists into Google Sheets and post the sheet link back to the PR",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "get-token": "npx ts-node scripts/get-refresh-token.ts"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^144.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/open": "^6.1.0",
    "@vercel/ncc": "^0.38.1",
    "open": "^11.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
